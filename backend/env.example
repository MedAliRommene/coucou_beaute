# ===========================================
# EXEMPLE DE CONFIGURATION - Coucou Beauté
# ===========================================
# Copiez ce fichier vers .env et configurez vos valeurs

# ===========================================
# CONFIGURATION DJANGO DE BASE
# ===========================================
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=your-domain.com,your-ip,localhost

# ===========================================
# BASE DE DONNÉES
# ===========================================
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_HOST=your_database_host
POSTGRES_PORT=5432

# ===========================================
# SÉCURITÉ CSRF & CORS
# ===========================================
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://your-ip
DJANGO_CORS_ORIGINS=https://your-domain.com

# ===========================================
# COOKIES SÉCURISÉS
# ===========================================
# Pour HTTP (développement) : False
# Pour HTTPS (production) : True
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# ===========================================
# EMAIL
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
SERVER_EMAIL=your-email@gmail.com

# ===========================================
# SÉCURITÉ HTTPS
# ===========================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
